{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block body %}
    <h1>Recipe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>RecipeTitle</th>
                <th>RecipePoster</th>
                <th>PreparationTime</th>
                <th>CookingTime</th>
                <th>NbParts</th>
                <th>Process</th>
                <th>OnlineDate</th>
                <th>Level</th>
                <th>InstaAccount</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.RecipeTitle }}</td>
                <td>{{ recipe.RecipePoster }}</td>
                <td>{{ recipe.PreparationTime }}</td>
                <td>{{ recipe.CookingTime }}</td>
                <td>{{ recipe.NbParts }}</td>
                <td>{{ recipe.Process }}</td>
                <td>{{ recipe.OnlineDate ? recipe.OnlineDate|date('Y-m-d') : '' }}</td>
                <td>{{ recipe.Level }}</td>
                <td>{{ recipe.InstaAccount }}</td>
                <td>{{ recipe.Slug }}</td>
                <td>
                    <a href="{{ path('recipe_show', {'id': recipe.id}) }}">show</a>
                    <a href="{{ path('recipe_edit', {'id': recipe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recipe_new') }}">Create new</a>
{% endblock %}
